Import('env_base')
Import('binFolder')
Import('pathToUtility')
Import('libraryPath')

pathToH = '#include/main/elements/'
pathToDrawing = '#include/main/drawing/'
libraryName = 'elements'

HeaderFiles = [
    'Element.h',
    'AllElements.h',
    'ElementManager.h',
    'Static/StaticElement.h',
    'Dynamic/DynamicElement.h',
    'Static/Camera.h',
    'Static/Pavement.h',
    'Static/PedestrianCrossing.h',
    'Static/Road.h'
    'Static/SpawnPoint.h',
    'Dynamic/Pedestrian.h',
    'Dynamic/Vehicle/Vehicle.h',
    'Dynamic/Vehicle/Car.h',
    'Dynamic/Vehicle/Truck.h'
]

env = env_base.Clone()

filesCPP = [
    Glob('*.cc')
]


filesH = [pathToH + x for x in HeaderFiles]

env.Append(
    CPPPATH = [
        pathToH,
        pathToDrawing
    ]
    )

env.StaticLibrary(
    target = libraryPath + libraryName, 
    source = filesCPP)
