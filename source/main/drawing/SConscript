Import('env_base')
Import('binFolder')
Import('pathToUtility')
Import('libraryPath')

pathToH = '#include/main/drawing/'
libraryName = 'drawing'

HFilesMain = [
    'Drawable.h',
    'DrawingID.h',
    'DrawManager.h',
    'texture/Manager.h'
]

HFilesUtility = [
    'ID.hpp',
    'SetTemplate.hpp'
]

filesCPP = [
    'DrawManager.cc',
    'texture/Manager.cc',
    'texture/Texture.cc'
]


filesHMain = [pathToH + x for x in HFilesMain]
filesHUtil = [pathToUtility + x for x in HFilesUtility]

env = env_base.Clone()

env.Append(CPPPATH = pathToH)

env.StaticLibrary(libraryPath + libraryName, filesCPP)
