Import('env_base')
Import('binFolder')
Import('pathToUtility')
Import('libraryPath')

pathToH = '#include/main/screen/'
pathToH2 = '#include/main/event/'
libraryName = 'screenLib'

HFilesMain = [
    'ScreenInterface.h',
    'ScreenID.h',
]

HFilesUtility = [
    'ID.hpp'
]

env = env_base.Clone()

filesCPP = [
    Glob('*.cc')
]


filesHMain = [pathToH + x for x in HFilesMain]
filesHUtil = [pathToUtility + x for x in HFilesUtility]

env.Append(
    CPPPATH = [
        pathToH, 
        pathToH2
    ]
    )

libEventsName = "%sevents%s" % (env['LIBPREFIX'], env['LIBSUFFIX'])

env.StaticLibrary(
    target = libraryPath + libraryName, 
    source = [filesCPP, libraryPath + libEventsName])
