Import('env_base')
Import('binFolder')
Import('pathToUtility')
Import('libraryPath')

pathToH = '#include/main/screen/'
pathToH2 = '#include/main/program_events/'
libraryName = 'screenLib'

HFilesMain = [
    'ScreenInterface.h',
    'ScreenID.h',
]

HFilesUtility = [
    'ID.hpp'
]

filesCPP = [
    Glob('*.cc'),
    Glob('../program_events/*.cc') #TODO:causes SCons environment warnings, maybe compile object separately
]


filesHMain = [pathToH + x for x in HFilesMain]
filesHUtil = [pathToUtility + x for x in HFilesUtility]

env = env_base.Clone()

env.Append(
    CPPPATH = [
        pathToH, 
        pathToH2
    ]
    )

env.StaticLibrary(target = libraryPath + libraryName, source = filesCPP)
