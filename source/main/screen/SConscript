
Import('env_base')
Import('binFolder')
Import('pathToUtility')
Import('libraryPath')

pathToH = '#include/main/screen/'
libraryName = 'screenLib'

HFilesMain = [
    'screenInterface.h',
    'screenID.h',
]

HFilesUtility = [
    'ID.h'
]

filesCPP = [
    'screenID.cpp',
    'screenManager.cpp',
    'startScreen.cpp'
]




filesHMain = [pathToH + x for x in HFilesMain]
filesHUtil = [pathToUtility + x for x in HFilesUtility]

env = env_base.Clone()

env.Append(CPPPATH = pathToH)

env.StaticLibrary(libraryPath + libraryName, filesCPP)
