
Import('env_base')
Import('binFolder')
Import('pathToUtility')
Import('libraryPath')

pathToH = '#include/main/screen/'
pathToH2 = '#include/main/program_events/'
libraryName = 'screenLib'

HFilesMain = [
    'screenInterface.h',
    'screenID.h',
]

HFilesUtility = [
    'ID.h'
]

filesCPP = [
    'screenID.cpp',
    'screenManager.cpp',
    'startScreen.cpp',
    '../program_events/basicEvents.cpp',
    '../program_events/eventManager.cpp',
    '../program_events/eventSet.cpp',
    "../program_events/UIEvents.cpp"
]


filesHMain = [pathToH + x for x in HFilesMain]
filesHUtil = [pathToUtility + x for x in HFilesUtility]

env = env_base.Clone()

env.Append(
    CPPPATH = [
        pathToH, 
        pathToH2
    ]
    )

env.StaticLibrary(target = libraryPath + libraryName, source = filesCPP)
