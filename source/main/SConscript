import copy

Import('env_base')
Import('libraryPath')
Import('programPath')
Import('programName')
Import('binFolder')
Import('sys')

pathToH = '#include/'
pathToUtils = '#include/main/utility/'

SFMLLibraries = [
    'sfml-graphics', 
    'sfml-window', 
    'sfml-system'
]

programLibraries = [
    'screenLib',
    'elements',
    'graph',
    'events', 
    'draw',
    'collision',
    'controls',
    'Buttons',
    'Triggers',
    'synch',
    'tiles'
]

externalLibraries = [
    'Box2D',
    'pthread',
    'libX11'
]

if sys.platform.startswith('linux'):
    objectFiles = [
        binFolder + 'graphic_library_facade/GraphicLibraryFacade.o'
    ]
else:
    objectFiles = [
        binFolder + 'graphic_library_facade/GraphicLibraryFacade.obj'
    ]

HFilesFolder = [

]

filesCPP = [
    'Main.cc',
    'ProgramSetup.cc'
]



filesHMain = [pathToH + x for x in HFilesFolder]

env = env_base.Clone()

env.Append(
    CPPPATH = [
        'source/BD_FACADE', 
        'source/graphic_library_facade', 
        '#source/main',
        pathToH,
        pathToUtils
        ],

        LIBS = programLibraries + SFMLLibraries + externalLibraries,

        LIBPATH = [
            libraryPath
        ]
)

programFile = env.Program(target = programPath + programName, source = filesHMain + filesCPP + objectFiles)
