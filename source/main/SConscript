import copy

Import('env_base')
Import('libraryPath')
Import('programPath')
Import('programName')
Import('binFolder')
Import('sys')

pathToH = '#include/'

SFMLLibraries = [ #with '-l' at the beggining?
    'sfml-graphics', 
    'sfml-window', 
    'sfml-system'
]

programLibraries = [
    'events', 
    'screenLib', 
    'drawing'
]

externalLibraries = [
    'box2d'
]

if sys.platform.startswith('linux'):
    objectFiles = [
        binFolder + 'graphic_library_facade/graphicLibraryFacade.o'
    ]
else:
    objectFiles = [
        binFolder + 'graphic_library_facade/graphicLibraryFacade.obj'
    ]

HFilesFolder = [
]

filesCPP = [
    'main.cpp',
    'programSetup.cpp'
]



filesHMain = [pathToH + x for x in HFilesFolder]

env = env_base.Clone()

env.Append(
    CPPPATH = [
        'source/BD_FACADE', 
        'source/graphic_library_facade', 
        '#source/main',
        pathToH
        ],

        LIBS = SFMLLibraries + programLibraries + externalLibraries,

        LIBPATH = [
            libraryPath
        ]
)

programFile = env.Program(target = programPath + programName, source = filesHMain + filesCPP + objectFiles)

Return('programFile')
