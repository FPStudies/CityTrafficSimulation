Import('env_base')
Import('binFolder')
Import('pathToUtility')
Import('libraryPath')

pathToH = '#include/main/program_events/'
libraryName = 'events'

HFilesMain = [
    'EventInterface.h',
    'Events.h',
]

HFilesUtility = [
    'SetTemplate.hpp'
]

filesCPP = [
    'BasicEvents.cc',
    'EventSet.cc',
    'EventManager.cc',
    'UIEvents.cc'
]



filesHMain = [pathToH + x for x in HFilesMain]
filesHUtil = [pathToUtility + x for x in HFilesUtility]

env = env_base.Clone()

env.Append(CPPPATH = pathToH)

env.StaticLibrary(libraryPath + libraryName, filesCPP)
