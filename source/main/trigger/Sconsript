Import('env_base')

Import('pathTo_drawing')
Import('pathTo_controls')
Import('pathTo_UI')
Import('pathTo_trigger')

Import('libraryPath')

pathToH = pathToTrigger + 'action/'
pathToH2 = pathToTrigger + 'event/'
libraryName = 'Triggers'

HFilesMain = [
    'action/ExitWindow.h',
    'action/Interface.h',
    'event/Button.h',
    'event/Interface.h'
]

HFilesControls = [
    'ControlMapping.h'
]

HFilesUI = [
    'button/Interface.h'
]

env = env_base.Clone()

filesCPP = [
    Glob('*.cc'),
    Glob('action/*.cc'),
    Glob('event/*.cc')
]


filesHMain = [pathTo_trigger + x for x in HFilesMain]
filesHControls = [pathToControls + x for x in HFilesControls]
filesH_UI = [pathToUI + x for x in HFilesUI]

env.Append(
    CPPPATH = [
        pathToH, 
        pathToH2
        ]
    )

env.StaticLibrary(
    target = libraryPath + libraryName, 
    source = filesCPP + filesHControls + filesH_UI
    )
