Import('env_tests')
Import('binFolder')
Import('sys')

pathToH = '#include/main/collision'

env = env_tests.Clone()

env.Append(
    CPPPATH = [
        '#libraries/boost_1_72_0',
	pathToH
    ]
)

#static libraries "undefined" error workaround
if sys.platform.startswith('linux'):
    objectFiles = [
        binFolder + 'main/collision/Sensor.o',
	'../../bin/BoostTestInclude.o'
    ]
else:
    objectFiles = [
        binFolder + 'main/collision/Sensor.obj',
	'../../bin/BoostTestInclude.obj'
    ]

CPPFiles = [
    'CollisionTests.cc'
]

env.Program(target = "CollisionTests", source = CPPFiles + objectFiles)

